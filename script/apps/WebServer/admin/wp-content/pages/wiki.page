-- following is wiki angular app code, app.js must be included first followed by controllers.
wp_enqueue_script("MyApp", "/wp-content/pages/wiki/app.js");
wp_enqueue_script("authController", "/wp-content/pages/wiki/authController.js");
wp_enqueue_script("wikiController", "/wp-content/pages/wiki/wikiController.js");
wp_enqueue_style("wiki_style", "/wp-content/pages/wiki/wiki.css"); 

-- calculate website name and page name from current url
include_once("./wiki/website.page");
local siteName, pageName = request:url():match("^/?([^/]+)/?([^/]*)");
if(siteName) then
    local rootUrl, siteName = getSiteRootURL(getWebsite(siteName));
    if(rootUrl) then
        echo(format("<script>WikiPage.siteName = '%s'; WikiPage.pageName = '%s'; WikiPage.rootUrl = '%s';</script>", siteName, pageName, rootUrl));
    end
end
?>
